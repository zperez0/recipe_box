<%= render "layouts/errors", :object => @recipe %>

<%= form_for @recipe do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

<%# WIP add a button that allows a user to add as many ingredient forms? %>
  <div class="form-group">
    <%= form.label :ingredient %>
    <%= form.text_field :ingredient, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= form.label :instruction %>
      <%= form.text_area :instruction, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= form.label :content_body %>
      <%= form.text_area :content_body, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= form.label :rating %>
      <%= form.number_field :rating, min: 1, max: 5, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>