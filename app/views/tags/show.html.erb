<div class="title-container">
  <h2><%= @recipe.title %></h2>
</div>
<h3>Tag: <%= @tag.category %> </h3>

<div class="edit_delete">
  <div class="thumbmail">
    <div class="caption">
      <br>
        <p>
          <%= link_to "Edit tag", edit_recipe_tag_path(@recipe, @tag), class: "btn btn-default" %>
          <%= link_to "Delete tag", product_tag_path(@recipe, @tag), class: "btn btn-danger",
                                                                              :data => { :confirm => "Are you sure you want to delete: #{@recipe.title} - #{@tag.category} tag?",
                                                                                          :method => "delete" } %>
        </p>
    </div>
  </div>
</div>

<p><%= link_to "Return to recipe", recipe_path(@recipe) %></p>